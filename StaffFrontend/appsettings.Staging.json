{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "System": "Information",
      "Microsoft": "Information"
    }
  },
  "CustomerMicroservice": {
    "GetCustomer": {
      "domain": "https://example.com",
      "port": 443,
      "path": "/customer/{customer-id}"
    },
    "GetCustomers": {
      "domain": "https://example.com",
      "port": 443,
      "path": "/customer"
    }
  },
  "ProductMicroservice": {
    "GetProduct": {
      "domain": "https://example.com",
      "port": 443,
      "path": "/Products/Details/{item-id}"
    },
    "GetProducts": {
      "domain": "https://example.com",
      "port": 443,
      "path": "/Products",
      "get": {
        "name": "{product-name}",
        "visible": "{product-visible}",
        "minprice": "{price-min}",
        "maxprice": "{price-max}"
      }
    }
  },
  "ReviewMicroservice": {
    "GetReview": {

      "note": "POSSIBLY DEPRECATED",

      "domain": "https://example.com",
      "port": 443,
      "path": "/review/view"
    },
    "GetReviews": {
      "domain": "https://example.com",
      "port": 443,
      "path": "/review/list",
      "get": {
        "productid": "{item-id}"
      }
    },
    "GetRating": {
      "domain": "https://example.com",
      "port": 443,
      "path": "/review/rating/{item-id}"
    }
  },
  "SupplierMicroservice": {}
}
