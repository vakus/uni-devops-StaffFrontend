@model StaffFrontend.Models.Restock.RestockCreateDTO

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Restock Order</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="restock.AccountName" class="control-label"></label>
                <input asp-for="restock.AccountName" class="form-control" />
                <span asp-validation-for="restock.AccountName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="restock.ProductID" class="control-label"></label>
                <select asp-for="restock.ProductID" class="form-control" asp-items="Model.products"></select>
                <span asp-validation-for="products" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="restock.Gty" class="control-label"></label>
                <input asp-for="restock.Gty" class="form-control" />
                <span asp-validation-for="restock.Gty" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
