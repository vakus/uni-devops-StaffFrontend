@model IEnumerable<StaffFrontend.Models.Product.Product>

@{
    ViewData["Title"] = "View";
}

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<h1>Products</h1>
<p>
    <a href="/products/new">Create New</a>
</p>
<hr />
<form method="GET">
    <dl class="row">
        <dt class="col-sm-4">
            <input class="form-control" type="text" name="name" placeholder="Product Name" />
        </dt>
        <dt class="col-sm-2">
            <input class="form-control" type="number" name="minprice" placeholder="Min Price" />
        </dt>
        <dt class="col-sm-2">
            <input class="form-control" type="number" name="maxprice" placeholder="Max Price" />
        </dt>
        <dt>
            <select class="form-control" name="sortby">
                <option selected>Sort By</option>
                <option>ID</option>
                <option>Name</option>
                <option>Price</option>
                <option>Stock Level</option>
            </select>
        </dt>
        <dt class="col-sm-1">
            <input class="btn btn-primary" type="submit" value="Set Filter" />
        </dt>
    </dl>
</form>
<table class="table table-dark">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Supply)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Supply)
                </td>
                <td>
                    <a href="/products/edit/@item.ID">Edit</a> |
                    <a href="/products/view/@item.ID">View</a> |
                    <a href="/products/delete/@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
